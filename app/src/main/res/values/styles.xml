<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="simpleText">

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>

    </style>

    <style name="supportText">

        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>

    </style>

    <style name="lightHintEditText" parent="simpleText">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="customeButton">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="backgroundColor">@color/light_blue</item>

    </style>

</resources>